<%- include('../includes/head.ejs') %> 
    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/product.css" />
</head>
<body>
  <%- include('../includes/nav.ejs') %>
  <main>
    <% if (errorMessage) { %>
      <div class='user-message user-message--error'><%= errorMessage %></div>
    <% } %>
    <form class="product-form" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
      <div class="form-control">
        <label for="title" >Title</label>
        <input class="<%= validationErrors.find(err => err.param === 'title') ? 'invalid' : ''%>" type="text" name="title" id="title" value="<% if (editing) { %><%=product.title%><% } else if (errorMessage) { %><%=previousValues.title%><% } else { %><% } %>">
      </div>
        <div class="form-control">
        <label for="imageUrl">ImageUrl</label>
        <input class="<%= validationErrors.find(err => err.param === 'imageUrl') ? 'invalid' : ''%>" type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%=product.imageUrl%><% } else if (errorMessage) { %><%=previousValues.imageUrl%><% } else {%><%} %>"/>
      </div>
        <div class="form-control">
        <label for="price">Price</label>
        <input class="<%= validationErrors.find(err => err.param === 'price') ? 'invalid' : ''%>" type="text" name="price" id="price" step="0.01" value="<% if (editing) { %><%=product.price%><% } else if (errorMessage) { %><%=previousValues.price%><% } else { %><% } %>"/>
      </div>
        <div class="form-control">
        <label for="description">Description</label>
        <textarea class="<%= validationErrors.find(err => err.param === 'description') ? 'invalid' : ''%>" type="text" name="description" id="description" rows="5" ><% if (editing) { %><%=product.decription%><% } else if (errorMessage) { %><%=previousValues.decription%><% } else { %><% } %></textarea>
      </div>
      <input type="hidden" name="productId" value="<% if (editing) { %><%=product._id%><% } else { %><% } %>">
      <input name="_csrf" type="hidden" , value="<%= csrfToken %>" />
      <button class="btn" type="submit"><% if (editing) { %>Update Product<%  } else { %>Add Product<% } %></button>
    </form>
  </main>
</body>
<%- include('../includes/end.ejs') %>
