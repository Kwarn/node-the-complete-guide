<%- include('../includes/head.ejs') %> 
    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/product.css" />
</head>
<body>
  <%- include('../includes/nav.ejs') %>
  <main>
    <form class="product-form" action="/admin/<% if (editing) { %>edit-product/<%=product.id%><% } else { %>add-product<% } %>" method="POST">
      <div class="form-control">
        <label for="title" >Title</label>
        <input type="text" name="title" id="title" value="<% if (editing) { %><%=product.title%><% } else { %><% } %>"/>
      </div>
        <div class="form-control">
        <label for="imageUrl">ImageUrl</label>
        <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%=product.imageUrl%><% } else { %><% } %>"/>
      </div>
        <div class="form-control">
        <label for="price">Price</label>
        <input type="text" name="price" id="price" step="0.01" value="<% if (editing) { %><%=product.price%><% } else { %><% } %>"/>
      </div>
        <div class="form-control">
        <label for="description">Description</label>
        <textarea type="text" name="description" id="description" rows="5" ><% if (editing) { %><%=product.description %><% } else { %><% } %></textarea>
      </div>
      <input type="hidden" name="productId" value="<% if (editing) { %><%=product._id%><% } else { %><% } %>">
      <button class="btn" type="submit"><% if (editing) { %>Update Product<%  } else { %>Add Product<% } %></button>
    </form>
  </main>
</body>
<%- include('../includes/end.ejs') %>
