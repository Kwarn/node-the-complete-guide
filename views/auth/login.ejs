<%- include('../includes/head.ejs') %> 
    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/auth.css" />
</head>
<body>
  <%- include('../includes/nav.ejs') %>
  <main>
    <% if (errorMessage) { %>
      <div class='user-message user-message--error'><%= errorMessage %></div>
    <% } %>
    <form class="login-form" action="/login" method="POST" novalidate>
      <div class="form-control">
        <label for="email" >E-mail</label>
        <input class="<%= validationErrors.find(err => err.param === 'email') ? 'invalid' : ''%>" type="email" name="email" id="title" value="<%= previousLoginDetails.email %>"/>
      </div>
        <div class="form-control">
        <label for="password">Password</label>
        <input name="_csrf" type="hidden" , value="<%= csrfToken %>" />
        <input class="<%= validationErrors.find(err => err.param === 'password') ? 'invalid' : ''%>" type="password" name="password" id="password"/>
        <div class='centered'>
          <button class="btn" type="submit">Login</button>
        </div>
    </form>
    <div class='centered'>
      <a href="/reset">Forgotten password?</a>
    </div>
  </main>
</body>
<%- include('../includes/end.ejs') %>
